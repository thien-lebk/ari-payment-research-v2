<!doctype html>
<html lang="en">

  <!-- <Header> -->
    <%- include("chucnang/header.ejs") %>
    <!-- <End of Header> -->
  
    <body>
        <!-- Navnar -->
      <%- include("chucnang/navbar.ejs") %>
        <!-- End of Navnar -->
        <div class="container mb-5 text-center">
  

    
<p style="font-size: 36px;" class="price">Tổng số tiền: <%= tongtien.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1,") %> đ </p>
<br>
  <form action="xacnhanthanhtoangiohang" method="post">
    <input type="hidden" name="idgiohang" value="<%= giohang.idgiohang %>">
    <label>Hình thức thanh toán</label>
    <select style="width: 150px;" class="mx-auto form-control" name="thanhtoan" id="thanhtoan">
      <!-- Su dung forEach -->
        <option value= "momo" > Momo</option>
        <option value= "vnpay" >VNPAY</option>
        <!-- <option value= "ether" >Ether</option> -->
    </select>
    <br>
    <button type="submit" class="btn btn-lg btn-success my-4">Xác nhận</button>

  </form>
  <div style="padding-bottom: 30px;">
    <h4 style="color: red;"><strong>DANH SÁCH SẢN PHẨM</strong></h4>
  </div>
  <div class="row" style="justify-content : center">
    <% giohang.mathang.forEach(mathang => { %>
    <div class="col-3">
     
        <div class="card mb-5" style="width: 18rem; margin-bottom: 40px;">
          <img src=<%= mathang.anh %> alt=<%= mathang.ten %>>
          <div class="card-body">
            <h5 class="card-title"> Mặt hàng: <%= mathang.ten %></h5>
            <!-- <p> Mô tả: <%= mathang.mota %></p> -->
            <P>Số lượng <%= mathang.soluongdat %></p>
            <p class="card-text">Thành tiền: <%= (mathang.gia*mathang.soluongdat).toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1,") %> đ</p>
           
          </div>
        </div>
        
    </div>
    <% }); %>
    
  </div>
  
</div>
  <%- include("chucnang/footer.ejs") %>
  
</body>

</html>