                <p>Danh mục</p>
                <%  find.forEach(element => { %>
                  <li><a href=<%= "/danhmuc/" + element.ten %> > <%= element.ten %></a></li>
          
             <% }); %>
            </ul> -->
  <!-- <body> -->
  <div class="container">
    <div style="padding-top: 50px; padding-bottom: 30px;">
      <h4 style="color: red;"><strong>DANH MỤC</strong></h4>
    </div>
    <div class="owl-carousel owl-theme margin-items outer-center-vertical-brand" id="key-items"
      style="width: 100%; height: 50%;">
      <%  find.forEach(element => { %>
      <button class="btn btn-outline-danger btn-lg"><a style="color: inherit; font-weight: 600; text-decoration: none;"
        href=<%= "/danhmuc/" + encodeURIComponent(element.ten.trim()) %>> <%= element.ten %></a></button>
      <% }); %>
    </div>



    <% if(listsp[0]){ %>
      <div style="padding-top: 50px; padding-bottom: 30px;">
        <h4 class="text-danger font-weight-bold">Danh mục: <%= listsp[0].chuyenmuc  %> </h4>
      </div>
    

    <% }else{ %>
    <h4 class="text-danger font-weight-bold" style="margin-top: 20px; margin-bottom: 20px;">Danh mục này chưa có sản phẩm</h4>
    <%  } %>
    <div class="owl-carousel owl-theme margin-items product-items-2" style="width: 100%; height: 100%;">
      <%- include("chucnang/itemsList.ejs") %>
    </div>
  </div>

  <%- include("chucnang/footer.ejs") %>
</body>


</html>