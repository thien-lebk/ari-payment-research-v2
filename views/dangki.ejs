<!DOCTYPE html>
<html>
<!-- <Header> -->
<%- include("chucnang/header.ejs") %>
<!-- <End of Header> -->

<body>
  <!-- Navnar -->
  <%- include("chucnang/navbar.ejs") %>
  <!-- End of Navnar -->


  <!-- login form -->
  <div class="container text-center container-sign-in">
    <img src="/img/nav/nav-logo.png" alt="login-logo">
    <h1 class="text-danger">Đăng ký</h1>
    <p class="text-danger">Welcome to <%= title %></p>
    <h1> <%= status %> </h1>
    <form method="POST" action="/post">
      <div class="form-group form-sign-in">
        <input type="text" name="usr" class="form-control mt-3" id="exampleInputEmail1" aria-describedby="emailHelp"
          placeholder="Username">
        <input type="password" name="pass" class="form-control mt-3" id="exampleInputEmail1"
          aria-describedby="emailHelp" placeholder="Password">

      </div>

      <button type="submit" class="btn btn-danger mt-3 log-in-btn">Đăng ký</button>
    </form>
    <p class="mt-3 mb-3 text-muted">&copy; 2019-2020</p>
  </div>
</body>

</html>